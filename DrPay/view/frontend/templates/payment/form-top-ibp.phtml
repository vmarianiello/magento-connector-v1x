<script type="text/javascript">
	function drIBPLoader(){		
		if(typeof digitalriverjs != "undefined"){ //If url and key set in admin
			//loadScriptIBP(jsUrl, function(){	
		    //After append js set Your API Key and Start DigitalRiver.js
		    var drIBPjs = digitalriverjs;
			// Create a token or display an error when the form is submitted.
			var paymentForm = document.getElementById('drpay-IBP-btn');
				paymentForm.addEventListener('click', function(event) {
				event.preventDefault();
				var payload = {};
				//After submit the creditcard details create the cart
	            jQuery.ajax({
					type: 'POST',
					url: BASE_URL + 'drpay/IBP/savedrquote',
					showLoader: true, //use for display loader 
					success: function (response) {
						//console.log(response);
						if (response.success) {
							if(response.content.payload){
								//Update billing address if not updated
								//jQuery(".checkout-billing-address .action-update").trigger("click");
								//once cart created get the payment source id
								var IBPData = response.content.payload;
								drIBPjs.createSource(IBPData).then(function(result) {
								    if (result.error) {								        
										//Something went wrong, display the error message to the customer
										document.getElementById('IBP-message').innerHTML ="";
										document.getElementById('IBP-message').innerHTML = "<?= $block->escapeJs($block->escapeHtml(__('Unable to process'))); ?>";
								    } else {
								        var source = result.source;
								        //console.log(source);
        						        window.checkoutConfig.payment.drpay_IBP.redirect_url = source.redirect.redirectUrl;
        						        continueIBPOrder();
								        //send source to back end
								       // sendToBackend(source);
								    }
								});
							}
						}else{							
							//Something went wrong, display the error message to the customer
							document.getElementById('IBP-message').innerHTML = "";
							document.getElementById('IBP-message').innerHTML = "<?= $block->escapeJs($block->escapeHtml(__('Unable to process'))); ?>";
						}
					}
				});	
			});
		}
	}

